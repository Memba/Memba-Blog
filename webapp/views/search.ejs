<% // Blog search result (list of posts) page %>
<!DOCTYPE html>
<html lang="<%- language %>">

<% // html head %>
<% include head.ejs %>

<body>

<% // common requirements %>
<% include common.ejs %>

<% // navigation bar %>
<% include navbar.ejs %>

<main>
    <div id="search-wrapper" class="k-content">
        <div class="container">
            <div class="page-header">
                <h1>
                    <% if (icon) { %><img src="<%- new URL(format(config.uris.cdn.icons, icon), config.uris.cdn.root).href %>" alt="<%= title %>"><% } %>
                    <span><%= title %></span>
                </h1>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-9">
                    <ul class="k-listview media-list">
                        <% for (var i = 0; i < results.length; i++) { %>
                        <li class="media">
                            <div class="media-left">
                                <a href="<%= results[i].site_url %>">
                                    <img class="media-object" src="<%- new URL(format(config.uris.cdn.icons, results[i].icon), config.uris.cdn.root).href %>" alt="<%= results[i].title %>">
                                </a>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">
                                    <a href="<%= results[i].site_url %>"><%= results[i].title %></a>
                                </h4>
                                <div class="author">
                                    <i class="kf kf-tags"></i><span>&nbsp;<%= results[i].category %></span>
                                    <i class="kf kf-user"></i><span>&nbsp;<%= results[i].author %></span>
                                    <i class="kf kf-datetime"></i><span>&nbsp;<%= moment(results[i].creation_date).locale(getLocale()).format('LLL') %></span>
                                </div>
                                <p><%= results[i].description %></p>
                            </div>
                        </li>
                        <% } %>
                    </ul>
                </div>
                <div class="d-none d-md-block col-md-4 col-lg-3 d-print-none">
                    <% include groups.ejs %>
                </div>
            </div>
        </div>
    </div>
</main>

<% // footer with language and theme %>
<% include footer.ejs %>

<script defer src="<%- new URL('common.bundle.js', config.uris.webpack.root).href + '?v=' + config.application.version %>" crossorigin="anonymous"></script>
<script defer src="<%- new URL('search.bundle.js', config.uris.webpack.root).href + '?v=' + config.application.version %>" crossorigin="anonymous"></script>

</body>
</html>
