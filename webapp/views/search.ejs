<% // Blog search result (list of posts) page %>
<!DOCTYPE html>
<html lang="<%- language %>">

<% // html head %>
<% include head.ejs %>

<body>

<% // common requirements %>
<% include common.ejs %>

<% // navigation bar %>
<% include navbar.ejs %>

<main>
    <div id="search-wrapper" class="k-content">
        <div class="container">
            <div class="page-header">
                <h1>
                    <% if (icon) { %><img src="<%- url.join(config.uris.cdn.root, format(config.uris.cdn.icons, icon)) %>" alt="<%= title %>"><% } %>
                    <span><%= title %></span>
                </h1>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-9">
                    <ul class="k-listview media-list">
                        <% for (var i = 0; i < results.length; i++) { %>
                        <li class="media">
                            <div class="media-left">
                                <a href="<%= results[i].site_url %>">
                                    <img class="media-object" src="<%- url.join(config.uris.cdn.root, format(config.uris.cdn.icons, results[i].icon)) %>" alt="<%= results[i].title %>">
                                </a>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">
                                    <a href="<%= results[i].site_url %>"><%= results[i].title %></a>
                                </h4>
                                <div class="author">
                                    <i class="kf kf-tags"></i><span>&nbsp;<%= results[i].category %></span>
                                    <i class="kf kf-user"></i><span>&nbsp;<%= results[i].author %></span>
                                    <i class="kf kf-datetime"></i><span>&nbsp;<%= moment(results[i].creation_date).locale(getLocale()).format('LLL') %></span>
                                </div>
                                <p><%= results[i].description %></p>
                            </div>
                        </li>
                        <% } %>
                    </ul>
                </div>
                <div class="hidden-xs col-sm-4 col-md-3 hidden-print">
                    <% include groups.ejs %>
                </div>
            </div>
        </div>
    </div>
</main>

<% // footer with language and theme %>
<% include footer.ejs %>

<script src="<%- url.join(config.uris.webpack.root, 'common.bundle.js') + '?v=' + config.application.version %>" crossorigin="anonymous"></script>
<script src="<%- url.join(config.uris.webpack.root, 'search.bundle.js') + '?v=' + config.application.version %>" crossorigin="anonymous"></script>

</body>
</html>
