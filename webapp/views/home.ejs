<% // Blog home page %>
<!DOCTYPE html>
<html lang="<%- language %>">

<% // html head %>
<% include head.ejs %>

<body>

<% // common requirements %>
<% include common.ejs %>

<% // navigation bar %>
<% include navbar.ejs %>

<main>
    <div id="home-wrapper">
        <div class="jumbotron"><h1><%= description %></h1></div>
        <div class="container k-content">
            <div class="row">
                <div class="col-xs-6">
                    <a href="<%= format(config.uris.webapp.pages, 'en', '') %>">
                        <div class="uk flag"></div>
                    </a>
                    <h2><%= config.home.en.title %></h2>
                    <p><%= config.home.en.text %></p>
                </div>
                <div class="col-xs-6">
                    <a href="<%= format(config.uris.webapp.pages, 'fr', '') %>">
                        <div class="fr flag"></div>
                    </a>
                    <h2><%= config.home.fr.title %></h2>
                    <p><%= config.home.fr.text %></p>
                </div>
            </div>
        </div>
    </div>
</main>

<% // footer with language and theme %>
<% include footer.ejs %>

<script defer src="<%- new URL('common.bundle.js', config.uris.webpack.root).href + '?v=' + config.application.version %>" crossorigin="anonymous"></script>
<script defer src="<%- new URL('home.bundle.js', config.uris.webpack.root).href + '?v=' + config.application.version %>" crossorigin="anonymous"></script>

</body>
</html>
