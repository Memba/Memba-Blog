<% // Blog home page %>
<!DOCTYPE html>
<html lang="<%- language %>">

<% // html head %>
<%- include('head.ejs') %>

<body>

<% // common requirements %>
<%- include('common.ejs') %>

<% // application bar %>
<%- include('appbar.ejs') %>

<main class="k-content">

    <% // drawer %>
    <%- include('drawer.ejs') %>

    <div class="jumbotron jumbotron-fluid"><h1 class="animated bounceInDown"><%= description %></h1></div>
    <div class="container">
        <div class="row app-lang">
            <div class="col-sm-6 text-center">
                <a href="<%= format(config.uris.webapp.pages, 'en', '') %>">
                    <div class="app-flag app-uk animated rotateIn"></div>
                </a>
                <div class="animated zoomIn">
                    <h2 class="mt-2"><%= config.home.en.title %></h2>
                    <p><%= config.home.en.text %></p>
                </div>
            </div>
            <div class="col-sm-6 text-center">
                <a href="<%= format(config.uris.webapp.pages, 'fr', '') %>">
                    <div class="app-flag app-fr animated rotateIn"></div>
                </a>
                <div class="animated zoomIn">
                    <h2 class="mt-2"><%= config.home.fr.title %></h2>
                    <p><%= config.home.fr.text %></p>
                </div>
            </div>
        </div>
    </div>
</main>

<% // footer with language and theme %>
<%- include('footer.ejs') %>

<script defer src="<%- scriptURL('common.bundle.js') %>" crossorigin="anonymous"></script>
<script defer src="<%- scriptURL('home.bundle.js') %>" crossorigin="anonymous"></script>

</body>
</html>
