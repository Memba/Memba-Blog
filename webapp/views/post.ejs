<% // Blog posting page %>
<!DOCTYPE html>
<html lang="<%- language %>">

<% // html head %>
<% include head.ejs %>

<body>

<% // common requirements %>
<% include common.ejs %>

<% // navigation bar %>
<% include navbar.ejs %>

<main itemscope itemtype="http://schema.org/BlogPosting">
    <div id="post-wrapper" class="k-content">
        <div class="container" role="document">
            <div class="page-header">
                <h1>
                    <% if (icon) { %><img src="<%- url.resolve(config.uris.cdn.root, format(config.uris.cdn.icons, icon)) %>" alt="<%= title %>"><% } %>
                    <span itemprop="name"><%= title %></span>
                </h1>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-9">
                    <div>
                        <div class="pull-left" itemprop="author" itemscope itemtype="http://schema.org/Person">
                            <i class="kf kf-user"></i>&nbsp;
                            <span itemprop="name"><%= author %></span>
                        </div>
                        <div class="pull-right">
                            <i class="kf kf-datetime"></i>&nbsp;
                            <time itemprop="datePublished" datetime="<%= creation_date %>"><%= moment(creation_date).locale(getLocale()).format('LLL') %></time>
                        </div>
                        <div hidden>
                            <span itemprop="articleSection"><%= category %></span>
                            <time itemprop="dateModified" datetime="<%= creation_date %>"><%= moment(creation_date).locale(getLocale()).format('LLL') %></time>
                            <span itemprop="description"><%= description %></span>
                            <span itemprop="headline"><%= description.substr(0, 100) + '...' %></span>
                            <span itemprop="inLanguage"><%= getLocale() %></span>
                            <img itemprop="image" src="<%= image %>" alt="<%= title %>">
                            <span itemprop="mainEntityOfPage"><%= site_url %></span>
                            <span itemscope itemtype="http://schema.org/Organization" itemprop="publisher">
                                <span itemprop="name"><%- config.application.siteName %></span>
                                <span itemscope itemtype="http://schema.org/ImageObject" itemprop="logo">
                                    <span itemprop="url"><%- url.resolve(config.uris.cdn.root, format(config.uris.cdn.images, 'apple-touch-icon-180x180.png')) %></span>
                                </span>
                            </span>
                            <span itemprop="url"><%= site_url %></span>
                        </div>
                    </div>
                    <div class="clearfix">
                        <article itemprop="articleBody">
                            <%- content %>
                        </article>
                    </div>
                </div>
                <div class="hidden-xs col-sm-4 col-md-3 hidden-print">
                    <% // Social buttons %>
                    <section>
                        <a role="button" href="#" class="social" data-command="facebook"><img src="<%- url.resolve(config.uris.webapp.root, format(config.uris.webapp.public, 'facebook.svg')) %>" alt="Facebook"></a>
                        <a role="button" href="#" class="social" data-command="google"><img src="<%- url.resolve(config.uris.webapp.root, format(config.uris.webapp.public, 'google.svg')) %>" alt="Google+"></a>
                        <a role="button" href="#" class="social" data-command="linkedin"><img src="<%- url.resolve(config.uris.webapp.root, format(config.uris.webapp.public, 'linkedin.svg')) %>" alt="Linkedin"></a>
                        <a role="button" href="#" class="social" data-command="pinterest"><img src="<%- url.resolve(config.uris.webapp.root, format(config.uris.webapp.public, 'pinterest.svg')) %>" alt="Pinterest"></a>
                        <a role="button" href="#" class="social" data-command="twitter"><img src="<%- url.resolve(config.uris.webapp.root, format(config.uris.webapp.public, 'twitter.svg')) %>" alt="Twitter"></a>
                    </section>
                    <% // Side menus for calendar, categories and authors %>
                    <% include groups.ejs %>
                </div>
            </div>
        </div>
    </div>
</main>

<% // footer with language and theme %>
<% include footer.ejs %>

<script defer src="<%- url.resolve(config.uris.webpack.root, 'common.bundle.js') + '?v=' + config.application.version %>" crossorigin="anonymous"></script>
<script defer src="<%- url.resolve(config.uris.webpack.root, 'post.bundle.js') + '?v=' + config.application.version %>" crossorigin="anonymous"></script>

</body>
</html>
