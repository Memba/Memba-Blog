<% // Blog posting page %>
<!DOCTYPE html>
<html lang="<%- language %>">

<% // html head %>
<%- include('head.ejs') %>

<body>

<% // common requirements %>
<%- include('common.ejs') %>

<% // navigation bar %>
<%- include('navbar.ejs') %>

<main class="k-content" itemscope itemtype="http://schema.org/BlogPosting">

    <% // drawer %>
    <%- include('drawer.ejs') %>

    <div class="container" role="document">
        <div id="id-main-title" class="border-bottom my-3">
            <h1 class="d-flex">
                <% if (icon) { %><img class="mr-2" src="<%- iconURL(icon) %>" alt="<%= title %>"><% } %>
                <span itemprop="name"><%= title %></span>
            </h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-8 col-lg-9">
                <div class="clearfix mb-4">
                    <div class="text-muted float-left" itemprop="author" itemscope itemtype="http://schema.org/Person">
                        <i class="kf kf-user"></i>&nbsp;
                        <span itemprop="name"><%= author %></span>
                    </div>
                    <div class="text-muted float-right">
                        <i class="kf kf-datetime"></i>&nbsp;
                        <time itemprop="datePublished" datetime="<%= creation_date %>"><%= moment(creation_date).locale(getLocale()).format('LLL') %></time>
                    </div>
                    <div hidden>
                        <span itemprop="articleSection"><%= category %></span>
                        <time itemprop="dateModified" datetime="<%= creation_date %>"><%= moment(creation_date).locale(getLocale()).format('LLL') %></time>
                        <span itemprop="description"><%= description %></span>
                        <span itemprop="headline"><%= description.substr(0, 100) + '...' %></span>
                        <span itemprop="inLanguage"><%= getLocale() %></span>
                        <img itemprop="image" src="<%= image %>" alt="<%= title %>">
                        <span itemprop="mainEntityOfPage"><%= site_url %></span>
                        <span itemscope itemtype="http://schema.org/Organization" itemprop="publisher">
                            <span itemprop="name"><%- config.application.siteName %></span>
                            <span itemscope itemtype="http://schema.org/ImageObject" itemprop="logo">
                                <span itemprop="url"><%- imageURL('apple-touch-icon-180x180.png') %></span>
                            </span>
                        </span>
                        <span itemprop="url"><%= site_url %></span>
                    </div>
                </div>
                <div>
                    <article itemprop="articleBody">
                        <%- content %>
                    </article>
                </div>
            </div>
            <div class="d-none d-md-block col-md-4 col-lg-3 d-print-none">
                <% // Social buttons %>
                <section class="app-group mb-4">
                    <a role="button" href="#" class="app-social" data-command="facebook"><img src="<%- publicURL('facebook.svg') %>" alt="Facebook" class="img-h2"></a>
                    <a role="button" href="#" class="app-social" data-command="google"><img src="<%- publicURL('google.svg') %>" alt="Google+" class="img-h2"></a>
                    <a role="button" href="#" class="app-social" data-command="linkedin"><img src="<%- publicURL('linkedin.svg') %>" alt="Linkedin" class="img-h2"></a>
                    <a role="button" href="#" class="app-social" data-command="pinterest"><img src="<%- publicURL('pinterest.svg') %>" alt="Pinterest" class="img-h2"></a>
                    <a role="button" href="#" class="app-social" data-command="twitter"><img src="<%- publicURL('twitter.svg') %>" alt="Twitter" class="img-h2"></a>
                </section>
                <% // Side menus for calendar, categories and authors %>
                <%- include('groups.ejs') %>
            </div>
        </div>
    </div>
</main>

<% // footer with language and theme %>
<%- include('footer.ejs') %>

<script defer src="<%- scriptURL('common.bundle.js') %>" crossorigin="anonymous"></script>
<script defer src="<%- scriptURL('post.bundle.js') %>" crossorigin="anonymous"></script>

</body>
</html>
