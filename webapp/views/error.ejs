<% // Kidoju error page %>
<!DOCTYPE html>
<html lang="<%- language %>">

<% // html head %>
<% include head.ejs %>

<body>

<% // common requirements %>
<% include common.ejs %>

<% // navigation bar %>
<% include navbar.ejs %>

<main>
    <div id="error-wrapper" class="k-content">
        <div class="container">
            <div class="page-header">
                <h1>
                    <% if (icon) { %><img src="<%= icon %>" alt="<%= title %>"><% } %>
                    <span><%= title %></span>
                </h1>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="alert alert-danger" role="alert"><%= description %></div>
                </div>
            </div>
            <div class="pull-right"><button id="back-button" class="k-button"><%- __('error.back')  %></button></div>
        </div>
    </div>
</main>

<% // footer with language and theme %>
<% include footer.ejs %>

<script defer src="<%- url.join(config.uris.webpack.root, 'common.bundle.js') + '?v=' + config.application.version %>" crossorigin="anonymous"></script>
<script defer src="<%- url.join(config.uris.webpack.root, 'error.bundle.js') + '?v=' + config.application.version %>" crossorigin="anonymous"></script>

</body>
</html>
