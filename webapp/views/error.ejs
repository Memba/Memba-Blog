<% // Kidoju error page %>
<!DOCTYPE html>
<html lang="<%- language %>">

<% // html head %>
<% include head.ejs %>

<body class="d-flex flex-column vh-100">

<% // common requirements %>
<% include common.ejs %>

<% // navigation bar %>
<% include navbar.ejs %>

<main class="k-content flex-grow-1 overflow-auto">
    <div class="container">
        <div id="id-main-title" class="border-bottom my-3">
            <h1>
                <% if (icon) { %><img src="<%= icon %>" alt="<%= title %>"><% } %>
                <span><%= title %></span>
            </h1>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger" role="alert"><%= description %></div>
            </div>
        </div>
        <div class="float-right"><button class="k-button"><%- __('error.back')  %></button></div>
    </div>
</main>

<% // footer with language and theme %>
<% include footer.ejs %>

<script defer src="<%- new URL('common.bundle.js', config.uris.webpack.root).href + '?v=' + config.application.version %>" crossorigin="anonymous"></script>
<script defer src="<%- new URL('error.bundle.js', config.uris.webpack.root).href + '?v=' + config.application.version %>" crossorigin="anonymous"></script>

</body>
</html>
